<?xml version="1.0" encoding="UTF-8"?>

<string_table>

	<!-- Button -->
	<string id="ui_mcm_ssfx_module_ao">
		<text>Ambient Occlusion</text>
	</string>

	<!-- SSR Settings -->
	<string id="ui_mcm_ssfx_module_ao_title">
		<text>Ambient Occlusion Settings</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_quality_mcm">
		<text>Quality</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_quality_mcm_desc">
		<text>[ RESTART REQUIERED ] Quantity of samples used to render the ambient occlusion. The Very High setting can heavily impact your performance. [ 2, 4, 8 ]</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_res_mcm">
		<text>Resolution</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_res_mcm_desc">
		<text>Resolution of the ambient occlusion rendering.</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_distance_mcm">
		<text>Max Distance</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_distance_mcm_desc">
		<text>Maximum distance of the ambient occlusion rendering.</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_blur_mcm">
		<text>Blur</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_blur_mcm_desc">
		<text>Base blur intensity to smooth the ambient occlusion result.</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_radius_mcm">
		<text>General Radius</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_radius_mcm_desc">
		<text>Maximum distance to test the occlusion of a pixel. You may need to adjust the intensity of the effect if you increase the distance.</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_max_occ_mcm">
		<text>Maximum Occlusion</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_max_occ_mcm_desc">
		<text>Maximum occlusion possible of a pixel. [ 0.0 = full black ]</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_global_int_mcm">
		<text>Global Intensity</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_global_int_mcm_desc">
		<text>Intensity of the ambient occlusion globally. [ 1.0 = 100% ~ 0.5 = 50% ]</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_hud_int_mcm">
		<text>HUD Intensity</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_hud_int_mcm_desc">
		<text>Intensity of HUD elements ( Weapons, arms, etc. ). This is a percentage of the Global intensity. [ 1.0 = 100% ~ 0.5 = 50% ]</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_flora_int_mcm">
		<text>Flora Intensity</text>
	</string>

	<string id="ui_mcm_ssfx_module_ao_flora_int_mcm_desc">
		<text>Intensity of flora ( Grass, trees, etc. ). This is a percentage of the Global intensity. [ 1.0 = 100% ~ 0.5 = 50% ]</text>
	</string>

</string_table>